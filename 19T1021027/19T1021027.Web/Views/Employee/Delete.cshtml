
@{
    ViewBag.Title = "Xóa Nhân Viên";
}

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"> </i> Xóa dữ liệu
                            </button>
                            <a href="~/Employee" class="btn btn-warning">
                                Quay lại
                            </a>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </form>
    </div>
</div>


