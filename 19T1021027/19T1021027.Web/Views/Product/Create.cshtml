@model _19T1021027.DomainModels.Product

@{
    ViewBag.Title = "Bổ sung mặt hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/product/SaveProduct" method="post"  enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input hidden name="ProductID" value="@Model.ProductID"/>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="ProductName" autofocus>
                    @Html.ValidationMessageFor(m => m.ProductName)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Loại hàng:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="categoryID">
                        @foreach (var item in SelectListHelper.Category())
                        {
                                <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhà cung cấp:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="supplierID">
                        @foreach (var item in SelectListHelper.Supplier())
                        {
                            
                            <option value="@item.Value">@item.Text</option>
                            
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Unit" autofocus>
                    @Html.ValidationMessageFor(m => m.Unit)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Price">
                    @Html.ValidationMessageFor(m => m.Price)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="file"
                           onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0])" name="uploadPhotos" />
                    <img id="blah" alt="your image" width="100" height="100" src="" />
                    @Html.ValidationMessageFor(m => m.Photo)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>


