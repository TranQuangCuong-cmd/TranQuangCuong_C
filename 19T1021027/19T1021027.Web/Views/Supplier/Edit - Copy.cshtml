@model _19T1021027.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Supplier/Save" method="post">
            <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="SupplierName"
                           name="SupplierName"
                           value="@Model.SupplierName"
                           placeholder="Nhập tên nhà cung cấp">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Tên giao dịch:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="ContactName" value="@Model.ContactName" name="ContactName" placeholder="Nhập tên giao dịch">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Address"
                           name="Address"
                           value="@Model.Address"
                           placeholder="Nhập địa chỉ">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="number">Số điện thoại:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Phone"
                           name="Phone"
                           value="@Model.Phone"
                           placeholder="Nhập số điện thoại">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Quốc gia:</label>
                <div class="col-sm-10">
                    <select class="form-control" id="Country" name="Country">
                        <option value="">--Chọn Quốc Gia</option>
                        @foreach (var item in _19T1021027.BusinessLayers.CommonDataService.ListOfCountries())
                        {
                            if (item.CountryName == Model.Country)
                            {
                                <option value="@item.CountryName" selected>@item.CountryName</option>
                            }
                            else
                            {
                                <option value="@item.CountryName">@item.CountryName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Thành phố:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="City"
                           name="City"
                           value="@Model.City"
                           placeholder="Nhập thành phố">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="number">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="PostalCode"
                           name="PostalCode"
                           value="@Model.PostalCode"
                           placeholder="Nhập mã bưu chính">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Supplier" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

