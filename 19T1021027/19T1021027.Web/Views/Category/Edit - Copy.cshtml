@model _19T1021027.DomainModels.Category
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Save" method="post">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="CategoryName"
                           name="CategoryName"
                           value="@Model.CategoryName"
                           placeholder="Nhập tên nhà cung cấp">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Mô tả loại hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Description" value="@Model.Description" name="Description" placeholder="Nhập tên giao dịch">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Mã danh mục:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="ParentCategoryId"
                           name="ParentCategoryId"
                           value="@Model.ParentCategoryId"
                           placeholder="Nhập mã danh mục">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Category" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>