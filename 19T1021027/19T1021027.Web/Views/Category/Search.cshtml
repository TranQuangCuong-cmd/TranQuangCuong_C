@model _19T1021027.Web.Models.CategorySearchOutput
@{
    Layout = null;
}
<p>Có <strong>@Model.RowCount</strong> bản ghi trong tổng số <strong>@Model.PageCount </strong>trang</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Tên loại hàng</th>
            <th>Mô tả loại hàng</th>
            <th>Mã danh mục</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                @*<td>@item.ParentCategoryId</td>*@
                <td class="text-right" style="width: 90px">
                    <a href="~/Category/Edit/@item.CategoryID" class="btn btn-success">
                        Sửa
                    </a>
                    <a href="~/Category/Delete/@item.CategoryID" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                     <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>
