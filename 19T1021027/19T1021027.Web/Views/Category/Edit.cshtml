@model _19T1021027.DomainModels.Category
@{ }

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Save" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.CategoryID)

            @Html.ValidationSummary("", new { @style = "coler:@f00" })

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Tên loại hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CategoryName,
                             new { @class = "form-control", @placeholder = "Nhập tên loại hàng", @autufocus = "autufocus" })
                    @*@Html.ValidationMessageFor(m => m.SupplierName,"", new { @style = "coler:@f00" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Mô tả loại hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description,
                             new { @class = "form-control", @placeholder = "Nhập mô tả loại hàng", @autufocus = "autufocus" })
                    @*@Html.ValidationMessageFor(m => m.SupplierName,"", new { @style = "coler:@f00" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Mã danh mục:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ParentCategoryId,
                             new { @class = "form-control", @placeholder = "Nhập mã danh mục", @autufocus = "autufocus" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Category" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>