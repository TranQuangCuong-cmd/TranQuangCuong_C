@model _19T1021027.Web.Models.CustomerSearchOutput
@{
    Layout = null;
}
<p>Có <strong>@Model.RowCount</strong> bản ghi trong tổng số <strong>@Model.PageCount </strong>trang</p>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Tên khách hàng</th>
            <th>Tên giao dịch</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th>Quốc gia</th>
            <th>Thành phố</th>
            <th>Mã bưu chính</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.CustomerName</td>
                <td>@item.ContactName</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.Country</td>
                <td>@item.City</td>
                <td>@item.PostalCode</td>
                <td class="text-right" style="width: 90px">
                    <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-success">
                        Sửa
                    </a>
                    <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>
