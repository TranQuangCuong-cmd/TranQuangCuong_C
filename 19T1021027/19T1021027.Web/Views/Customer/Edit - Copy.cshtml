@model _19T1021027.DomainModels.Customer
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Customer/Save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Tên khách hàng:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="CustomerName"
                           name="CustomerName"
                           value="@Model.CustomerName"
                           placeholder="Nhập tên khách hàng">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Tên giao dịch:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="ContactName"
                           name="ContactName"
                           value="@Model.ContactName"
                           placeholder="Nhập tên giao dịch">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Address"
                           name="Address"
                           value="@Model.Address"
                           placeholder="Nhập địa chỉ">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Quốc gia:</label>
                <div class="col-sm-10">
                    <select class="form-control"
                            id="Country"
                            name="Country">
                        <option value="">--Chọn quốc gia</option>
                        @foreach (var item in _19T1021027.BusinessLayers.CommonDataService.ListOfCountries())
                        {
                            if (item.CountryName == Model.Country)
                            {
                                <option value="@item.CountryName" selected>@item.CountryName</option>
                            }
                            else
                            {
                                <option value="@item.CountryName">@item.CountryName</option>
                            }
                        }

                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Thành phố:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="City"
                           name="City"
                           value="@Model.City"
                           placeholder="Nhập tên thành phố">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="number">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="PostalCode"
                           name="PostalCode"
                           value="@Model.PostalCode"
                           placeholder="Nhập mã bưu chính">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Email"
                           name="Email"
                           value="@Model.Email"
                           placeholder="Nhập Email">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Customer" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

