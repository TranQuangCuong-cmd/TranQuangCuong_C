@model _19T1021027.DomainModels.Customer
@{ }

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Customer/Save" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.CustomerID)

            @Html.ValidationSummary("", new { @style = "coler:@f00" })

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Tên khách hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CustomerName,
                                  new { @class = "form-control", @placeholder = "Nhập tên khách hàng", @autufocus = "autufocus" })
                    @*@Html.ValidationMessageFor(m => m.CustomerName,"", new { @style = "coler:@f00" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Tên giao dịch:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ContactName,
                                  new { @class = "form-control", @placeholder = "Nhập tên giao dịch", @autufocus = "autufocus" })
                    @*@Html.ValidationMessageFor(m => m.SupplierName, "", new { @style = "coler:@f00" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address,
                                  new { @class = "form-control", @placeholder = "Nhập địa chỉ", @autufocus = "autufocus" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Quốc gia:</label>
                <div class="col-sm-10">
                    <select class="form-control"
                            id="Country"
                            name="Country">
                        <option value="">--Chọn quốc gia</option>
                        @foreach (var item in _19T1021027.BusinessLayers.CommonDataService.ListOfCountries())
                        {
                            if (item.CountryName == Model.Country)
                            {
                                <option value="@item.CountryName" selected>@item.CountryName</option>
                            }
                            else
                            {
                                <option value="@item.CountryName">@item.CountryName</option>
                            }
                        }

                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="text">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.City,
                                  new { @class = "form-control", @placeholder = "Nhập thành phố", @autufocus = "autufocus" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="number">Mã bưu chính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PostalCode,
                                  new { @class = "form-control", @placeholder = "Nhập mã bưu chính", @autufocus = "autufocus" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email,
                             new { @class = "form-control", @placeholder = "Nhập email", @autufocus = "autufocus" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Customer" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
