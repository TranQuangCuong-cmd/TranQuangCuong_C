@model _19T1021027.Web.Models.ShipperSearchOutput
@{
    Layout = null;
}
<p>Có <strong>@Model.RowCount</strong> bản ghi trong tổng số <strong>@Model.PageCount </strong>trang</p>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Tên nhà cung cấp</th>
            <th>Số điện thoại</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.ShipperName</td>
                <td>@item.Phone</td>
                <td class="text-right" style="width: 90px">
                    <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-success">
                        Sửa
                    </a>
                    <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="~/Shipper?page=@i&searchValue=@Model.SearchValue">@i</a></li>
            }
        }
    </ul>
</div>
